<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/weather_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="150"
        android:scaleType="fitXY"
        android:src="@drawable/weather_sunny_backgorund" />

    <LinearLayout
        android:id="@+id/weather_info_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:orientation="vertical" 
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/city_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="上海"
            android:textAppearance="@android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="晴"
            android:textAppearance="@android:attr/textAppearanceMedium" />

        <LinearLayout
            android:id="@+id/temprature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ten_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/degree_one" />

            <ImageView
                android:id="@+id/one_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/degree_nine" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/air_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/aqi_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="49"
                android:textAppearance="@android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/aqi_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优"
                android:textAppearance="@android:attr/textAppearanceMedium" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>